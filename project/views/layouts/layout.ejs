<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/layout.css">
    <title>Laufveranstaltungsverwaltung</title>
</head>
<body>
    <!--navbar-->
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <!--Navlinks-->
        <a class="navbar-brand ms-3" href="/">
            <img src="/images/logo.png" alt="NetRun logo" width="50" height="50">
            NetRun
        </a>
        <a class="nav-link text-light" href="/profile">Mein Profil</a>
        <a class="nav-link text-light" href="/events">Laufveranstaltungen</a>
        <a class="nav-link text-light" href="/clubs">Vereine</a>

        <!--show login/logout depending on login status-->
        <% if (user) { %>
            <form class="d-flex" action="/logout" method="POST">
                <button class="btn btn-outline-danger me-3" type="submit" value="Logout">Abmelden</button>
            </form>
        <% } else { %>
            <a class="btn btn-outline-success me-3" href="/login">Anmelden</a>
        <% } %>

    </nav>

    <!--body goes here-->
    <div class="container my-3">
        <%-body%>
    </div>

    <!--add validation styling-->
    <script>
        const form = document.querySelector("form")
        form.addEventListener('submit', e => {
            if (!form.checkValidity()) {
                e.preventDefault()
            }
            form.classList.add('was-validated')
        })
    </script>

    <!--Bootstrap loading-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
</body>
</html>